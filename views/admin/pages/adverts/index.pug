extends ../../layouts/default.pug

block main
  if(role.permissions.includes("accounts_view"))
    h1(class="mb-4") Danh sách quảng cáo

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-4.text-right
            if(role.permissions.includes("accounts_create"))
              a(
                href=`/${prefixAdmin}/adverts/create`
                class="btn btn-outline-success"
              ) + Thêm mới
            
        table(
          class="table table-hover table-sm"
        )
          thead
            tr
              th STT
              th Hình ảnh
              th Tiêu đề
              th Mô tả
              if(role.permissions.includes("accounts_edit"))
                th Trạng thái
              th Hành động

          tbody
            each item, index in records
              tr 
                td #{index+1}
                td
                  img(
                    src=item.image
                    alt=item.title
                    width="100px"
                    height="auto"
                  )
                td #{item.title}
                td !{item.description}

                if(role.permissions.includes("accounts_edit"))
                  td
                    if (item.status === "active")
                      button(
                        link=`/${prefixAdmin}/adverts/change-status/inactive/${item.id}`
                        class="badge badge-success"
                        button-change-status
                      ) Hoạt động
                    else
                      button(
                        link=`/${prefixAdmin}/adverts/change-status/active/${item.id}`
                        class="badge badge-danger"
                        button-change-status
                      ) Dừng hoạt động
                td
                  a(
                    class="btn btn-secondary btn-sm"
                    href=`/${prefixAdmin}/adverts/detail/${item.id}`
                  ) Chi tiết
                  if(role.permissions.includes("accounts_edit"))
                    a(
                      class="btn btn-warning btn-sm ml-1"
                      href=`/${prefixAdmin}/adverts/edit/${item.id}`
                    ) Sửa